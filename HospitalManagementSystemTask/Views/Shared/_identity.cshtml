@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-2" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Giriş
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-2" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Qeydiyyat
    </a>
}
else
{
    <span style="padding: 5px;"></span>

    <div class="dropdown">
        <button class="btn btn-outline-success  dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-badge"></i>Salam  @UserManager.GetUserName(User)
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i>İstifadəçilər
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Doctors" asp-action="Index">
                        <i class="bi bi-people"></i>Həkimlər
                    </a>
                </li>
            }
        </ul>
    </div>

    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i>Çıxış
        </button>
    </form>
}

