
@using HospitalManagementSystemTask.Data.Enums
@model List<Doctor>

<h2>Yeni həkim əlavə et</h2>
<div class="row">
    <div class="col-md-8 offset-2">

        @if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-controller="Doctors" asp-action="Create">Yeni həkim əlavə et</a>
            </div>
        }
        else
        {

            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-controller="Appointment" asp-action="Myappointments">Randevularım</a>
            </div>
        }


        <div class="row">
            <div class="col-md-8 offset-2">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Yaş</th>
                            <th>Vəzifə</th>
                            <th>Təcrübə</th>
                            <th>Nəzər yetir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Model in Model)
                        {
                            <tr>

                                <td>@Model.Name</td>
                                <td>@Model.Surname</td>
                                <td>@Model.Age</td>
                                <td>@Model.Position</td>
                                <td>@Model.Experience il</td>

                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <a class="alert-primary" href="/Appointment/Create/@Model.Id">Növbə götür</a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>